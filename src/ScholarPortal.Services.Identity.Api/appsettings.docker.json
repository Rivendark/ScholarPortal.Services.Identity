{
    "app": {
        "name": "Scholar Portal Identity Service",
        "version": "0.1"
    },
    "httpClient": {
        "type": "fabio",
        "retries": 3,
        "services": {}
    },
    "logger": {
        "console": {
            "enabled": true
        },
        "file": {
            "enabled": false,
            "path": "logs/logs.txt",
            "interval": "day"
        },
        "seq": {
            "enabled": true,
            "url": "http://seq:5341",
            "apiKey": "secret"
        }
    },
    "jaeger": {
        "enabled": true,
        "serviceName": "identity",
        "udpHost": "jaeger",
        "udpPort": 6831,
        "maxPacketSize": 0,
        "sampler": "const",
        "excludePaths": ["/ping", "/metrics"]
    },
    "metrics": {
        "enabled": true,
        "influxEnabled": false,
        "prometheusEnabled": true,
        "influxUrl": "http://influx:8086",
        "database": "scholarportal",
        "env": "docker",
        "interval": 5
    },
    "mongo": {
        "connectionString": "mongodb://mongo:27017",
        "database": "identity-service",
        "seed": false
    },
    "rabbitMq": {
        "hostnames": [
            "rabbitmq"
        ]
    },
    "redis": {
        "connectionString": "redis",
        "instance": "identity:"
    },
    "swagger": {
        "enabled": true,
        "reDocEnabled": false,
        "name": "v0.1",
        "title": "API",
        "version": "v0.1",
        "routePrefix": "docs",
        "includeSecurity": true
    },
    "vault": {
        "enabled": false,
        "url": "http://vault:8200",
        "key": "identity-service/settings",
        "authType": "token",
        "token": "secret",
        "username": "user",
        "password": "secret"
    }
}